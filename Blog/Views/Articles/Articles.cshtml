@model IEnumerable<Blog.Models.Article>

<div class="container mt-4">
    <form asp-controller="Tag" asp-action="Search" method="get" class="form-inline mb-4">
        <div class="form-group">
            <input type="text" name="tagName" class="form-control mr-2" placeholder="Поиск по тегам..." />
        </div>
        <button type="submit" class="btn btn-primary">Поиск</button>
    </form>

    <h1 class="text-center my-4">Список статей</h1>
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Название</th>
                <th>Содержимое</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var article in Model)
                {
                    <tr>
                        <td>@article.Title</td>
                        <td>@Html.DisplayFor(m => article.Content)</td>
                        <td>
                            <a class="btn btn-primary" asp-controller="Articles" asp-action="Article" asp-route-id="@article.Id">Просмотреть статью</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">Нет статей, соответствующих вашему запросу.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

