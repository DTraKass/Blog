@model IEnumerable<Blog.Models.Article>

<h1>Список статей</h1>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Содержимое</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Title</td>
                <td>@article.Content</td>
                <td>
                    <a asp-controller="Articles" asp-action="Article" asp-route-id="@article.Id">Просмотреть статью</a>
                </td>
            </tr>
        }
    </tbody>
</table>
