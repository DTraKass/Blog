@{
    ViewData["Title"] = "Articles";
}
@model Blog.Models.Article

<h1>@Model.Title</h1>
<p>@Model.Content</p>

<h3>Теги</h3>
@if (Model.ArticleTags != null && Model.ArticleTags.Any())
{
    <ul>
        @foreach (var articleTag in Model.ArticleTags)
        {
            <li>@articleTag.Tag.Name</li>
        }
    </ul>
}
else
{
    <p>Нет тегов для этой статьи.</p>
}

<h3>Комментарии</h3>
@if (Model.Comments != null && Model.Comments.Any())
{
    foreach (var comment in Model.Comments)
    {
        <div>
            <strong>@comment.User?.UserName</strong>: @comment.Content
        </div>
    }
}
else
{
    <p>Еще нет комментариев.</p>
}

<style>
    .comment-form {
        margin-top: 20px;
        border: 1px solid #ccc;
        padding: 15px;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

        .comment-form textarea {
            width: 100%;
            padding: 10px;
            border-radius: 4px;
            border: 1px solid #ccc;
            font-size: 16px;
        }

        .comment-form button {
            margin-top: 10px;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .comment-form button:hover {
                background-color: #0056b3;
            }
</style>

@if (User.Identity.IsAuthenticated)
{
    <form asp-action="AddComment" method="post" class="comment-form">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" name="articleId" value="@Model.Id" />
        <div>
            <textarea name="content" placeholder="Ваш комментарий..." rows="3" required></textarea>
        </div>
        <button type="submit">Добавить комментарий</button>
    </form>
}
else
{
    <p>Войдите, чтобы оставить комментарий.</p>
}