@model IEnumerable<Blog.Models.Article>

@{
    ViewData["Title"] = "Список статей";
}

<h2>Список статей</h2>

<table class="table">
    <thead>
        <tr>
            <th>Заголовок</th>
            <th>Содержание</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Title</td>
                <td>@article.Content</td>
                <td>
                    <a asp-action="Details" asp-route-id="@article.UserId">Просмотреть</a> |
                    <a asp-action="Edit" asp-route-id="@article.UserId">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@article.UserId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Создать новую статью</a>


